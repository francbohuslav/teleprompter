{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/server",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "types": ["react", "react-dom"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["./src/common/**/*", "./src/server/**/*"],
    "exclude": ["./tests/*.test.ts"]
}
